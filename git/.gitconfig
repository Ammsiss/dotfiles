[init]
    defaultBranch = main
[user]
    name = Junji
    email = j7nj1.t41@gmail.com
[core]
    editor = nvim
    autocrlf = input
    safecrlf = true
    pager = delta
    excludesfile = ~/dotfiles/git/.gitignore_global
[push]
    default = simple
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = false
    inline-hint-style = syntax
    syntax-theme = gruvbox-dark
    dark = true
    # File
    file-style = omit
    # Hunk header
    hunk-header-style = file line-number syntax bold italic
    hunk-header-decoration-style = "#5E81AC" ul
    hunk-header-file-style = orange bold
    hunk-header-line-number-style = blue bold
    # Changes
    zero-style = syntax
    ; plus-style = brightgreen
    plus-emph-style = syntax darkgreen
    minus-style = syntax "#330011"
    minus-emph-style = syntax darkred
    # Labels
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
    # Line numbers
    line-numbers = true
    line-numbers-minus-style = brightred
    line-numbers-plus-style = brightgreen
    line-numbers-left-style = "#5E81AC"
    line-numbers-right-style = "#5E81AC"
    line-numbers-zero-style = "#4C566A"
    # Commit hash
    ; commit-style = "#ffffff" bold
    ; commit-decoration-style = "ul"
; [merge]
;     conflictStyle = zdiff3
[commit]
    template = ~/dotfiles/git/.gitmessage.txt
[alias]
    c = commit
    ch = checkout
    s = status
    ch = checkout
    br = branch
    p = push
    track = status -sb
    unstage = restore --staged
    last = log -1 HEAD
    t = log --oneline --decorate --graph --all
    d = diff
    ds = diff --staged
